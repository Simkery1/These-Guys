<div class="container">
  <div class="costume-show">
    <div class ="costume-picture">
      <p><%= cl_image_tag @costume.photo, height: 700, gravity: :north, width: 500, crop: :fill %> </p>
    </div>

    <div class="costume-details">
      <div class="costume-description">
        <div class= "name-price"> <h1><%= @costume.name %></h1>
          <h5> 25€/day </h5>
        </div>
        <p> <%= @costume.description %></p>
      </div>

      <div class="costume-informations">
        <p>Taille : unique</p>

      </div>

      <div class="container">
        <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
          <h3>Choisissez vos dates de location</h3>

          <%= simple_form_for :search, method: "get" do |f| %>
            <%= f.input :de, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :A, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.button :submit, "Reservez !", class:"btn btn-danger" %>
          <% end %>
        </div>
      </div>


      <div class="costume-ranking">
        <div class="owner-informations-show">
          <p> <%= "Propriétaire : #{@costume.owner.first_name} #{@costume.owner.last_name}"%>
        </div>
        <div class="ranking_show">
             <p><%= "Note : #{@costume.owner.rating}" %></p>
        </div>
        <div class="upload-button">
         <%= link_to "Book now!", bookings_path, class:"btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>

