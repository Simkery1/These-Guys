<div class="container">
  <div class="profile-container">
    <div class="profile-info">
      <div class="profile-avatar">
        <%= cl_image_tag current_user.photo, class: "avatar-bordered-large" %>
      </div>
      <div class="profile-name">
        <h1><%= current_user.user_name %></h1>
      </div>
      <div class="notes">
        <h3>Note : <%= current_user.rating %></h3>
      </div>
    </div>

    <div class="profile-details">
      <div class="profile-description">
        <div class= "profile-text">
          <%= current_user.description %>
        </div>
      </div>

      <div class="card-container">
        <div class="onglet">
          <h2>Mes costumes</h2>
          <%= link_to "Mes locations", owner_bookings_path, class:"btn btn-danger" %>
        </div>
        <div class="row">
            <% current_user.costumes.each do |costume| %>
              <div class="col-6">
              <%= link_to costume_path(costume.id), class: 'card_link' do %>
               <div class="card-trip">
                 <div class="card-image">
                   <%= cl_image_tag(costume.photo, height: 200, width: 150, gravity: :north, crop: :fill) %>
                 </div>
                 <div class="card-trip-infos">
                   <h2><%= costume.name %></h2>
                   <div class="description_product">
                     <p><%= costume.description %></p>
                   </div>
                   <div class="card-details">
                     <div class="size">
                       <h2> <%= 'size : 16' %></h2>
                     </div>
                   </div>
                 </div>
               </div>
             <% end %>
              </div>
           <% end %>
      </div>
    </div>
  </div>
</div>



